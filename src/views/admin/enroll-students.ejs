<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container mt-4">
            <%- include('../partials/alerts') %>


            <!-- //For alert section -->
            <!-- <% if (typeof success !=='undefined' && success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i>
                    <%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %> -->
            
                    <!-- <% if (typeof error !=='undefined' && error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i>
                            <%= error %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %> -->

                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2>Manage Students: <%= classData.name %>
                        </h2>
                        <p class="text-muted">
                            Grade <%= classData.grade %>-<%= classData.section %> |
                                    Teacher:
                                    <% if (classData.teacher && classData.teacher.user) { %>
                                        <%= classData.teacher.user.firstName %>
                                            <%= classData.teacher.user.lastName %>
                                                <% } else { %>
                                                    Not assigned
                                                    <% } %>
                        </p>
                    </div>
                    <a href="/admin/classes" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Classes
                    </a>
                </div>

                <div class="row">
                    <!-- Enrolled Students Column -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-users"></i> Enrolled Students
                                    <span class="badge bg-light text-primary ms-2">
                                        <% if (enrolledStudents && enrolledStudents.length) { %>
                                            <%= enrolledStudents.length %>
                                                <% } else { %>
                                                    0
                                                    <% } %>
                                    </span>
                                </h5>
                            </div>
                            <div class="card-body">
                                <% if (enrolledStudents && enrolledStudents.length> 0) { %>
                                    <div class="list-group">
                                        <% for (var i=0; i < enrolledStudents.length; i++) { var
                                            enrollment=enrolledStudents[i]; %>
                                            <div
                                                class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <strong>
                                                        <% if (enrollment.student && enrollment.student.user) { %>
                                                            <%= enrollment.student.user.firstName %>
                                                                <%= enrollment.student.user.lastName %>
                                                                    <% } else { %>
                                                                        Unknown Student
                                                                        <% } %>
                                                    </strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        ID:
                                                        <% if (enrollment.student && enrollment.student.user &&
                                                            enrollment.student.user.idNumber) { %>
                                                            <%= enrollment.student.user.idNumber %>
                                                                <% } else { %>
                                                                    N/A
                                                                    <% } %>
                                                    </small>
                                                </div>
                                                <!-- REMOVE STUDENT FORM -->
                                                <form
                                                    action="/admin/classes/<%= classData.id %>/enroll/<%= enrollment.student.id %>?_method=DELETE"
                                                    method="POST">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Remove this student from the class?')">
                                                        <i class="fas fa-times"></i> Remove
                                                    </button>
                                                </form>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } else { %>
                                        <p class="text-muted">No students enrolled yet.</p>
                                        <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Available Students Column -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-user-plus"></i> Add Students to Class
                                </h5>
                            </div>
                            <div class="card-body">
                                <% if (availableStudents && availableStudents.length> 0) { %>
                                    <form action="/admin/classes/<%= classData.id %>/enroll" method="POST" id="enrollForm">
                                        <div class="mb-3">
                                            <label class="form-label">Select Students to Enroll:</label>
                                        
                                            <!-- Select All Button -->
                                            <div class="mb-2">
                                                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="selectAllStudents(true)">
                                                    <i class="fas fa-check-square"></i> Select All
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-secondary ms-2" onclick="selectAllStudents(false)">
                                                    <i class="fas fa-times-circle"></i> Deselect All
                                                </button>
                                            </div>
                                        
                                            <div class="list-group" style="max-height: 300px; overflow-y: auto;">        <% for (var i=0; i < availableStudents.length; i++) { var student=availableStudents[i]; %>
                                                    <div class="list-group-item">
                                                        <div class="form-check">
                                                            <input class="form-check-input student-checkbox" type="checkbox"
                                                                name="studentIds" value="<%= student.id %>" id="student-<%= student.id %>">
                                                            <label class="form-check-label" for="student-<%= student.id %>">
                                                                <strong>
                                                                    <% if (student.user) { %>
                                                                        <%= student.user.firstName %>
                                                                            <%= student.user.lastName %>
                                                                                <% } else { %>
                                                                                    Unknown Student
                                                                                    <% } %>
                                                                </strong>
                                                                <br>
                                                                <small class="text-muted">
                                                                    ID:
                                                                    <% if (student.user && student.user.idNumber) { %>
                                                                        <%= student.user.idNumber %>
                                                                            <% } else { %>
                                                                                N/A
                                                                                <% } %>
                                                                </small>
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-success" onclick="return validateForm()">
                                            <i class="fas fa-plus"></i> Enroll Selected Students
                                        </button>
                                    </form>
                                    <% } else { %>
                                        <p class="text-muted">All students are already enrolled in this class.</p>
                                        <% } %>
                            </div>
                        </div>
                    </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

<script>
    function validateForm() {
        const checkboxes = document.querySelectorAll('.student-checkbox:checked');
        if (checkboxes.length === 0) {
            alert('Please select at least one student to enroll.');
            return false;
        }
        return true;
    }

    // Optional: Add select all functionality
    function selectAllStudents(selectAll) {
        const checkboxes = document.querySelectorAll('.student-checkbox');
        checkboxes.forEach(checkbox => {
            checkbox.checked = selectAll;
        });
    }
</script>

</html>