<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class Students - EdTech</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-4">
        <h2>Students in Class</h2>

        <% if (classData && classData.enrollments) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>ID Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i=0; i < classData.enrollments.length; i++) { %>
                        <tr>
                            <td>
                                <%= classData.enrollments[i].student.user.firstName %>
                                    <%= classData.enrollments[i].student.user.lastName %>
                            </td>
                            <td>
                                <%= classData.enrollments[i].student.user.idNumber %>
                            </td>
                            <td>
                                <a href="/admin/users/<%= classData.enrollments[i].student.user.id %>"
                                    class="btn btn-sm btn-outline-primary">View Profile</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <% } else { %>
                <p>No students found.</p>
                <% } %>

                    <a href="/admin/classes" class="btn btn-secondary">Back to Classes</a>
    </div>
</body>

</html>