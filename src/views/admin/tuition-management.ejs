<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tuition Management - EdTech</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container mt-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Tuition Management</h2>
                <div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#recordPaymentModal">
                        <i class="fas fa-plus"></i> Record Payment
                    </button>
                    <button class="btn btn-warning ms-2" onclick="checkPasswordExpiry()">
                        <i class="fas fa-clock"></i> Check Expired Passwords
                    </button>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Student ID</th>
                                    <th>Name</th>
                                    <th>Grade/Section</th>
                                    <th>Tuition Status</th>
                                    <th>Last Payment</th>
                                    <th>Password Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (students && students.length> 0) { %>
                                    <% students.forEach(student=> { %>
                                        <tr>
                                            <td>
                                                <%= student.user.idNumber %>
                                            </td>
                                            <td>
                                                <%= student.user.firstName %>
                                                    <%= student.user.lastName %>
                                            </td>
                                            <td>
                                                <%= student.grade %>-<%= student.section %>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                student.tuitionStatus === 'paid' ? 'success' : 
                                                student.tuitionStatus === 'partial' ? 'warning' : 'danger' 
                                            %>">
                                                    <%= student.tuitionStatus.toUpperCase() %>
                                                </span>
                                            </td>
                                            <td>
                                                <% if (student.tuitionPayments.length> 0) { %>
                                                    <%= new
                                                        Date(student.tuitionPayments[0].paymentDate).toLocaleDateString()
                                                        %>
                                                        (<%= student.tuitionPayments[0].receiptNumber %>)
                                                            <% } else { %>
                                                                No payments
                                                                <% } %>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge bg-<%= student.canChangePassword ? 'success' : 'warning' %>">
                                                    <%= student.canChangePassword ? 'Can Change' : 'Temporary' %>
                                                </span>
                                                <% if (student.tempPasswordExpiry) { %>
                                                    <br><small>Expires: <%= new
                                                            Date(student.tempPasswordExpiry).toLocaleDateString() %>
                                                            </small>
                                                    <% } %>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button class="btn btn-sm btn-outline-primary"
                                                        onclick="showRecordPayment('<%= student.id %>', '<%= student.user.firstName %> <%= student.user.lastName %>')">
                                                        <i class="fas fa-receipt"></i> Record Payment
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-warning"
                                                        onclick="resetPassword('<%= student.id %>')">
                                                        <i class="fas fa-key"></i> Reset Password
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7" class="text-center">No students found</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Record Payment Modal -->
        <div class="modal fade" id="recordPaymentModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Record Tuition Payment</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form id="recordPaymentForm">
                        <div class="modal-body">
                            <input type="hidden" id="paymentStudentId" name="studentId">
                            <div class="mb-3">
                                <label class="form-label">Student</label>
                                <input type="text" class="form-control" id="paymentStudentName" disabled>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Receipt Number *</label>
                                <input type="text" class="form-control" name="receiptNumber" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Amount</label>
                                <input type="number" class="form-control" name="amount" step="0.01" placeholder="0.00">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Semester</label>
                                <input type="text" class="form-control" name="semester" placeholder="e.g., 2024-1">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Payment Date</label>
                                <input type="date" class="form-control" name="paymentDate">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Record Payment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Reset Password Modal -->
        <div class="modal fade" id="resetPasswordModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Reset Student Password</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form id="resetPasswordForm">
                        <input type="hidden" id="resetStudentId" name="studentId">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Password Type</label>
                                <select class="form-select" name="passwordType" required>
                                    <option value="temporary">Temporary Password (Expires in 30 days)</option>
                                    <option value="full">Permanent Password (Only for paid students)</option>
                                </select>
                            </div>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Temporary Password:</strong> Student cannot change password until tuition is
                                paid.<br>
                                <strong>Permanent Password:</strong> Student can change password immediately.
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-warning">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            function showRecordPayment(studentId, studentName) {
                document.getElementById('paymentStudentId').value = studentId;
                document.getElementById('paymentStudentName').value = studentName;
                const modal = new bootstrap.Modal(document.getElementById('recordPaymentModal'));
                modal.show();
            }

            function resetPassword(studentId) {
                document.getElementById('resetStudentId').value = studentId;
                const modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
                modal.show();
            }

            async function checkPasswordExpiry() {
                try {
                    const response = await fetch('/admin/tuition/check-expiry');
                    const result = await response.json();

                    if (result.success) {
                        if (result.expiredStudents.length > 0) {
                            alert(`Found ${result.count} students with expired passwords. They need password resets.`);
                        } else {
                            alert('No expired passwords found.');
                        }
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error checking password expiry');
                }
            }

            // Record payment form submission
            document.getElementById('recordPaymentForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);

                try {
                    const response = await fetch('/admin/tuition/record-payment', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        alert('Payment recorded successfully!');
                        location.reload();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error recording payment');
                }
            });

            // Reset password form submission
            document.getElementById('resetPasswordForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);
                const studentId = document.getElementById('resetStudentId').value;

                try {
                    const response = await fetch(`/admin/students/${studentId}/reset-password`, {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        alert(`Password reset successfully! New password: ${result.newPassword}`);
                        location.reload();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error resetting password');
                }
            });
        </script>
</body>

</html>