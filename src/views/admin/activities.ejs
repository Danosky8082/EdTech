<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EdTech - System Activities</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .activity-log {
            max-height: 600px;
            overflow-y: auto;
        }

        .activity-item {
            border-left: 4px solid #007bff;
            padding-left: 1rem;
            margin-bottom: 1rem;
        }

        .activity-item.system {
            border-left-color: #28a745;
        }

        .activity-item.warning {
            border-left-color: #ffc107;
        }

        .activity-item.danger {
            border-left-color: #dc3545;
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container mt-4">
            <%- include('../partials/alerts') %>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>System Activities Log</h2>
                    <div class="btn-group">
                        <button class="btn btn-outline-primary" onclick="filterActivities('all')">All</button>
                        <button class="btn btn-outline-success" onclick="filterActivities('system')">System</button>
                        <button class="btn btn-outline-warning" onclick="filterActivities('user')">User</button>
                        <button class="btn btn-outline-info" onclick="filterActivities('login')">Login</button>
                    </div>
                </div>

                <!-- Statistics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center bg-primary text-white">
                            <div class="card-body">
                                <h3>
                                    <%= totalActivities %>
                                </h3>
                                <p class="mb-0">Total Activities</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-success text-white">
                            <div class="card-body">
                                <h3>
                                    <%= todayActivities %>
                                </h3>
                                <p class="mb-0">Today</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-info text-white">
                            <div class="card-body">
                                <h3>
                                    <%= uniqueUsers %>
                                </h3>
                                <p class="mb-0">Active Users</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-warning text-white">
                            <div class="card-body">
                                <h3>
                                    <%= systemActivities %>
                                </h3>
                                <p class="mb-0">System Events</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label class="form-label">Date Range</label>
                                <select class="form-select" id="dateFilter">
                                    <option value="7">Last 7 days</option>
                                    <option value="30" selected>Last 30 days</option>
                                    <option value="90">Last 90 days</option>
                                    <option value="365">Last year</option>
                                    <option value="all">All time</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">User Role</label>
                                <select class="form-select" id="roleFilter">
                                    <option value="all">All Roles</option>
                                    <option value="student">Students</option>
                                    <option value="teacher">Teachers</option>
                                    <option value="admin">Admins</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Search</label>
                                <input type="text" class="form-control" id="searchFilter"
                                    placeholder="Search activities...">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Activities List -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Activity Log</h5>
                    </div>
                    <div class="card-body">
                        <div class="activity-log" id="activitiesContainer">
                            <% if (activities && activities.length> 0) { %>
                                <% activities.forEach(activity=> { %>
                                    <div class="activity-item <%= activity.type %>" data-type="<%= activity.type %>"
                                        data-role="<%= activity.user.role %>"
                                        data-date="<%= new Date(activity.timestamp).toISOString().split('T')[0] %>">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">
                                                    <i class="fas fa-<%= activity.icon %> me-2"></i> <!-- CHANGED THIS LINE -->
                                                    <%= activity.action %>
                                                </h6>
                                                <p class="mb-1">
                                                    <strong>
                                                        <%= activity.user.firstName %>
                                                            <%= activity.user.lastName %>
                                                    </strong>
                                                    (<%= activity.user.role %>) - <%= activity.user.idNumber %>
                                                </p>
                                                <p class="mb-1 text-muted">
                                                    <%= activity.details %>
                                                </p>
                                                <small class="text-muted">
                                                    <%= new Date(activity.timestamp).toLocaleString() %>
                                                        <% if (activity.ipAddress) { %>
                                                            â€¢ IP: <%= activity.ipAddress %>
                                                                <% } %>
                                                </small>
                                            </div>
                                            <span class="badge bg-<%= activity.badgeColor %>"> <!-- Make sure this uses activity.badgeColor -->
                                                <%= activity.type %>
                                            </span>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <div class="text-center py-5">
                                                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                                                <h5>No activities recorded</h5>
                                                <p class="text-muted">Activity logs will appear here as users interact with the system.</p>
                                            </div>
                                            <% } %>
                        </div>
                    </div>
                </div>
        </div>

        <script>
            // Helper functions for activity display
            function getActivityIcon(action) {
                const icons = {
                    'login': 'sign-in-alt',
                    'logout': 'sign-out-alt',
                    'create': 'plus-circle',
                    'update': 'edit',
                    'delete': 'trash',
                    'upload': 'upload',
                    'download': 'download',
                    'view': 'eye',
                    'grade': 'check-circle',
                    'submit': 'paper-plane'
                };
                return icons[action.toLowerCase()] || 'history';
            }

            function getActivityBadgeColor(type) {
                const colors = {
                    'system': 'success',
                    'user': 'primary',
                    'login': 'info',
                    'warning': 'warning',
                    'error': 'danger'
                };
                return colors[type] || 'secondary';
            }

            // Filter functions
            function filterActivities(type) {
                const items = document.querySelectorAll('.activity-item');
                items.forEach(item => {
                    if (type === 'all') {
                        item.style.display = 'block';
                    } else {
                        item.style.display = item.getAttribute('data-type') === type ? 'block' : 'none';
                    }
                });
            }

            // Add event listeners for filters
            document.getElementById('dateFilter').addEventListener('change', applyFilters);
            document.getElementById('roleFilter').addEventListener('change', applyFilters);
            document.getElementById('searchFilter').addEventListener('input', applyFilters);

            function applyFilters() {
                const dateFilter = document.getElementById('dateFilter').value;
                const roleFilter = document.getElementById('roleFilter').value;
                const searchFilter = document.getElementById('searchFilter').value.toLowerCase();

                const items = document.querySelectorAll('.activity-item');
                const now = new Date();

                items.forEach(item => {
                    const itemDate = new Date(item.getAttribute('data-date'));
                    const itemRole = item.getAttribute('data-role');
                    const itemText = item.textContent.toLowerCase();

                    // Date filter
                    let dateMatch = true;
                    if (dateFilter !== 'all') {
                        const daysDiff = Math.floor((now - itemDate) / (1000 * 60 * 60 * 24));
                        dateMatch = daysDiff <= parseInt(dateFilter);
                    }

                    // Role filter
                    const roleMatch = roleFilter === 'all' || itemRole === roleFilter;

                    // Search filter
                    const searchMatch = searchFilter === '' || itemText.includes(searchFilter);

                    item.style.display = (dateMatch && roleMatch && searchMatch) ? 'block' : 'none';
                });
            }
        </script>
</body>

</html>