                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/admin/analytics">
                                            <i class="fas fa-chart-line"></i>Analytics
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/admin/activities">
                                            <i class="fas fa-history"></i>Activities
                                        </a>
                                    </li>
                                    <% } %>
                                        <% } %>
                </ul>

                <!-- Notification Bell -->
                <div class="notification-wrapper">
                    <div class="dropdown">
                        <a class="notification-bell dropdown-toggle" href="#" role="button" id="notificationDropdown"
                            onmouseover="showNotifications()" onmouseout="hideNotifications()">
                            <i class="fas fa-bell"></i>
                            <% if (typeof notificationCount !=='undefined' && notificationCount> 0) { %>
                                <span class="notification-badge blink" id="notificationBadge">
                                    <%= notificationCount> 9 ? '9+' : notificationCount %>
                                </span>
                                <% } %>
                        </a>
                        <ul class="dropdown-menu notification-dropdown" aria-labelledby="notificationDropdown" id="notificationDropdownMenu">
                            <li class="notification-header">
                                <span>Notifications</span>
                                <% if (typeof notificationCount !=='undefined' && notificationCount> 0) { %>
                                    <span class="badge bg-primary rounded-pill" id="notificationCountBadge">
                                        <%= notificationCount %>
                                    </span>
                                    <% } %>
                            </li>
                            <% if (typeof notifications !=='undefined' && notifications.length> 0) { %>
                                <% notifications.forEach(function(notification, index) { %>
                                    <li class="notification-item <%= notification.read ? 'read' : 'unread' %>"
                                        data-notification-id="<%= notification.id %>"
                                        onclick="handleNotificationClick('<%= notification.id %>', '<%= notification.type %>', '<%= notification.relatedId %>')">
                                        <div class="notification-icon">
                                            <i class="fas <%= notification.icon || 'fa-info-circle' %>"></i>
                                        </div>
                                        <div class="notification-content">
                                            <div class="notification-title">
                                                <%= notification.title %>
                                                    <% if (!notification.read) { %>
                                                        <span class="badge bg-danger ms-1">New</span>
                                                        <% } %>
                                            </div>
                                            <div class="notification-message">
                                                <%= notification.message %>
                                            </div>
                                            <div class="notification-time">
                                                <%= notification.time %>
                                            </div>
                                            <% if (!notification.read) { %>
                                                <div class="notification-actions">
                                                    <button class="notification-action-btn mark-as-read-btn"
                                                        onclick="event.stopPropagation(); markNotificationAsRead('<%= notification.id %>')">
                                                        Mark as read
                                                    </button>
                                                </div>
                                                <% } %>
                                        </div>
                                    </li>
                                    <% }); %>
                                        <li class="mark-all-read" onclick="markAllNotificationsAsRead()">
                                            <i class="fas fa-check-double me-1"></i> Mark all as read
                                        </li>
                                        <% } else { %>
                                            <li class="notification-empty" style="display: block;">
                                                <i class="fas fa-bell-slash"></i>
                                                <p>No notifications</p>
                                            </li>
                                            <% } %>
                        </ul>
                    </div>
                </div>

                <!-- Welcome section with dropdown -->
                <div class="welcome-section">
                    <ul class="navbar-nav">
                        <% if (typeof user !=='undefined' && user) { %>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <% if (user.avatar) { %>
                                        <img src="/<%= user.avatar %>" alt="Profile" class="profile-img-nav"
                                            onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';">
                                        <i class="fas fa-user me-1" style="display: none;"></i>
                                        <% } else { %>
                                            <i class="fas fa-user-circle me-1"></i>
                                            <% } %>
                                                <span class="navbar-text">Welcome, <%= user.firstName %></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" href="/auth/change-password">
                                            <i class="fas fa-key me-2"></i> Change Password
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/auth/logout">
                                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <% } else { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/auth/login">
                                        <i class="fas fa-sign-in-alt"></i> Login
                                    </a>
                                </li>
                                <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Notification dropdown functionality
    let notificationTimeout;
    let isHoveringNotifications = false;

    function showNotifications() {
        clearTimeout(notificationTimeout);
        isHoveringNotifications = true;
        document.getElementById('notificationDropdownMenu').classList.add('show');
    }

    function hideNotifications() {
        isHoveringNotifications = false;
        notificationTimeout = setTimeout(() => {
            if (!isHoveringNotifications) {
                document.getElementById('notificationDropdownMenu').classList.remove('show');
            }
        }, 500);
    }

    // Keep dropdown open when hovering over it
    document.addEventListener('DOMContentLoaded', function () {
        const notificationMenu = document.getElementById('notificationDropdownMenu');
        const notificationBell = document.getElementById('notificationDropdown');

        if (notificationMenu) {
            notificationMenu.addEventListener('mouseover', () => {
                isHoveringNotifications = true;
                clearTimeout(notificationTimeout);
            });

            notificationMenu.addEventListener('mouseout', () => {
                isHoveringNotifications = false;
                notificationTimeout = setTimeout(() => {
                    if (!isHoveringNotifications) {
                        notificationMenu.classList.remove('show');
                    }
                }, 500);
            });
        }

        if (notificationBell) {
            notificationBell.addEventListener('click', function (e) {
                e.preventDefault();
                const menu = document.getElementById('notificationDropdownMenu');
                if (menu.classList.contains('show')) {
                    menu.classList.remove('show');
                } else {
                    menu.classList.add('show');
                }
            });
        }
    });

    // Notification functions
        async function markNotificationAsRead(notificationId) {
                console.log('Marking notification as read:', notificationId);

                try {
                    const response = await fetch('/api/notifications/mark-as-read', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ notificationId: notificationId })
                    });

                    const result = await response.json();

                    if (result.success) {
                        console.log('Notification marked as read successfully');

                        // Remove from UI
                        const notificationElement = document.querySelector(`[data-notification-id="${notificationId}"]`);
                        if (notificationElement) {
                            notificationElement.style.opacity = '0';
                            notificationElement.style.transition = 'opacity 0.3s ease';

                            setTimeout(() => {
                                notificationElement.remove();
                                updateNotificationCount();
                                checkEmptyState();
                            }, 300);
                        }
                    } else {
                        console.error('Failed to mark notification as read:', result.error);
                        alert('Failed to mark notification as read');
                    }
                } catch (error) {
                    console.error('Error marking notification as read:', error);
                    alert('Error marking notification as read');
                }
            }

        async function markAllNotificationsAsRead() {
                console.log('Marking all notifications as read');

                try {
                    const response = await fetch('/api/notifications/mark-all-read', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        console.log('All notifications marked as read successfully');

                        // Remove all unread notifications from UI
                        const unreadNotifications = document.querySelectorAll('.notification-item.unread');
                        unreadNotifications.forEach((item, index) => {
                            item.style.opacity = '0';
                            item.style.transition = 'opacity 0.3s ease';

                            setTimeout(() => {
                                item.remove();
                                if (index === unreadNotifications.length - 1) {
                                    updateNotificationCount();
                                    checkEmptyState();
                                }
                            }, 300 + (index * 100));
                        });

                        // If no unread notifications, still update count
                        if (unreadNotifications.length === 0) {
                            updateNotificationCount();
                            checkEmptyState();
                        }
                    } else {
                        console.error('Failed to mark all notifications as read:', result.error);
                        alert('Failed to mark all notifications as read');
                    }
                } catch (error) {
                    console.error('Error marking all notifications as read:', error);
                    alert('Error marking all notifications as read');
                }
            }

        // Store notification count for page consistency
        function updateStoredNotificationCount() {
            const unreadCount = document.querySelectorAll('.notification-item.unread').length;
            sessionStorage.setItem('notificationCount', unreadCount);
            console.log('Stored notification count updated:', unreadCount);
        }

        function getStoredNotificationCount() {
            return parseInt(sessionStorage.getItem('notificationCount')) || 0;
        }

        // Update the notification count display
        function updateNotificationCount() {
            console.log('Updating notification count');

            const unreadNotifications = document.querySelectorAll('.notification-item.unread');
            const unreadCount = unreadNotifications.length;
            const badge = document.getElementById('notificationBadge');
            const countBadge = document.getElementById('notificationCountBadge');

            // Update session storage
            sessionStorage.setItem('notificationCount', unreadCount);

            console.log('Unread count:', unreadCount);

            if (unreadCount > 0) {
                if (badge) {
                    badge.textContent = unreadCount > 9 ? '9+' : unreadCount;
                    badge.classList.add('blink');
                    console.log('Badge updated:', badge.textContent);
                }
                if (countBadge) {
                    countBadge.textContent = unreadCount;
                    console.log('Count badge updated:', countBadge.textContent);
                }
            } else {
                if (badge) {
                    badge.remove();
                    console.log('Badge removed');
                }
                if (countBadge) {
                    countBadge.remove();
                    console.log('Count badge removed');
                }
            }
        }

        function checkEmptyState() {
            console.log('Checking empty state');

            const notificationItems = document.querySelectorAll('.notification-item');
            const emptyState = document.querySelector('.notification-empty');
            const markAllRead = document.querySelector('.mark-all-read');
            const notificationHeader = document.querySelector('.notification-header');

            console.log('Notification items count:', notificationItems.length);

            if (notificationItems.length === 0) {
                console.log('Showing empty state');
                if (emptyState) {
                    emptyState.style.display = 'block';
                }
                if (markAllRead) {
                    markAllRead.style.display = 'none';
                }
                if (notificationHeader) {
                    const countBadge = notificationHeader.querySelector('.badge');
                    if (countBadge) {
                        countBadge.remove();
                    }
                }
            } else {
                console.log('Hiding empty state');
                if (emptyState) {
                    emptyState.style.display = 'none';
                }
                if (markAllRead) {
                    markAllRead.style.display = 'block';
                }
            }
        }

        function handleNotificationClick(notificationId, type, relatedId) {
            console.log('Notification clicked:', notificationId, type, relatedId);

            // Mark as read first
            markNotificationAsRead(notificationId);

            // Handle navigation based on notification type
            switch (type) {
                case 'assignment':
                    window.location.href = `/student/assignments/${relatedId}`;
                    break;
                case 'grade':
                    window.location.href = `/student/grades`;
                    break;
                case 'material':
                    window.location.href = `/student/materials/${relatedId}`;
                    break;
                default:
                    // Do nothing or handle default case
                    console.log('No specific action for notification type:', type);
                    break;
            }
        }

        // Close notifications when clicking outside
        document.addEventListener('click', function (event) {
            const notificationMenu = document.getElementById('notificationDropdownMenu');
            const notificationBell = document.getElementById('notificationDropdown');

            if (notificationMenu && notificationBell) {
                if (!notificationMenu.contains(event.target) && !notificationBell.contains(event.target)) {
                    notificationMenu.classList.remove('show');
                }
            }
        });

        // Initialize notification functionality
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Notification system initialized');

            const storedCount = getStoredNotificationCount();
            const actualCount = document.querySelectorAll('.notification-item.unread').length;

            console.log('Stored count:', storedCount, 'Actual count:', actualCount);

            // it means we need to update the UI to match what the user has done
            if (storedCount !== actualCount && storedCount >= 0) {
                console.log('Updating UI to match stored count');
                updateNotificationCount();
            }

            // Initial check for empty state
            checkEmptyState();

            // Make sure the count is accurate on page load
            updateNotificationCount();
        });
</script>
</body>

