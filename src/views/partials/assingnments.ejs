<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> - EdTech
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container mt-4">
            <%- include('../partials/alerts') %>

                <!-- Back Button -->
                <div class="mb-4">
                    <a href="/student/dashboard" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>

                <!-- Class Header -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="fas fa-tasks"></i>
                            <%= class.name %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Teacher:</strong>
                            <%= class.teacher.user.firstName %>
                                <%= class.teacher.user.lastName %>
                        </p>
                        <p><strong>Grade/Section:</strong>
                            <%= class.grade %>-<%= class.section %>
                        </p>
                    </div>
                </div>

                <!-- Assignments Section -->
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="fas fa-assignment"></i> Class Assignments
                            <span class="badge bg-primary ms-2">
                                <%= assignments.length %>
                            </span>
                        </h4>
                    </div>
                    <div class="card-body">
                        <% if (assignments && assignments.length> 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Due Date</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% assignments.forEach(assignment=> {
                                            const isPastDue = new Date(assignment.dueDate) < new Date(); const
                                                hasSubmission=assignment.submissions && assignment.submissions.length>
                                                0;
                                                const submission = hasSubmission ? assignment.submissions[0] : null;
                                                %>
                                                <tr>
                                                    <td><strong>
                                                            <%= assignment.title %>
                                                        </strong></td>
                                                    <td>
                                                        <%= assignment.description || 'No description' %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(assignment.dueDate).toLocaleDateString() %>
                                                            <br>
                                                            <small class="text-muted">
                                                                <%= new Date(assignment.dueDate).toLocaleTimeString() %>
                                                            </small>
                                                    </td>
                                                    <td>
                                                        <% if (hasSubmission) { %>
                                                            <span class="badge bg-success">Submitted</span>
                                                            <% if (submission.grade !==null) { %>
                                                                <br>
                                                                <small>Grade: <%= submission.grade %></small>
                                                                <% } %>
                                                                    <% } else if (isPastDue) { %>
                                                                        <span class="badge bg-danger">Overdue</span>
                                                                        <% } else { %>
                                                                            <span
                                                                                class="badge bg-warning">Pending</span>
                                                                            <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (!hasSubmission && !isPastDue) { %>
                                                            <a href="/student/assignments/<%= assignment.id %>/submit"
                                                                class="btn btn-primary btn-sm">
                                                                <i class="fas fa-upload"></i> Submit
                                                            </a>
                                                            <% else if (hasSubmission) { %>
                                                                <a href="<%= submission.fileUrl %>"
                                                                    class="btn btn-info btn-sm" download>
                                                                    <i class="fas fa-download"></i> View Submission
                                                                </a>
                                                                <% } else { %>
                                                                    <span class="text-muted">No actions available</span>
                                                                    <% } %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                                    <h5>No assignments yet</h5>
                                    <p class="text-muted">Your teacher hasn't created any assignments for this class
                                        yet.</p>
                                </div>
                                <% } %>
                    </div>
                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>