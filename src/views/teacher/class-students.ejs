<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> - EduTech
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container mt-4">
            <%- include('../partials/alerts') %>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="fas fa-users me-2"></i> Students in <%= class.name %>
                    </h2>
                    <a href="/teacher/classes" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Classes
                    </a>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Class Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Class:</strong>
                                    <%= class.name %>
                                </p>
                                <p><strong>Grade & Section:</strong>
                                    <%= class.grade %>-<%= class.section %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Total Students:</strong>
                                    <%= students.length %>
                                </p>
                                <p><strong>Subject:</strong>
                                    <%= class.subject || 'Not specified' %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Student List</h5>
                    </div>
                    <div class="card-body">
                        <% if (students && students.length> 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID Number</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% students.forEach(function(student) { %>
                                            <tr>
                                                <td>
                                                    <%= student.user.idNumber %>
                                                </td>
                                                <td>
                                                    <%= student.user.firstName %>
                                                        <%= student.user.lastName %>
                                                </td>
                                                <td>
                                                    <%= student.user.email %>
                                                </td>
                                                <td>
                                                    <span
                                                        class="badge bg-<%= student.user.isActive ? 'success' : 'secondary' %>">
                                                        <%= student.user.isActive ? 'Active' : 'Inactive' %>
                                                    </span>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                    <h5>No students enrolled</h5>
                                    <p class="text-muted">This class doesn't have any students yet.</p>
                                </div>
                                <% } %>
                    </div>
                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>