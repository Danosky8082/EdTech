<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EdTech - Materials</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container mt-4">
            <%- include('../partials/alerts') %>
            <% if (typeof success !=='undefined' ) { %>
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle me-2"></i>
                    <%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Teaching Materials</h2>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadMaterialModal">
                        <i class="fas fa-upload"></i> Upload Material
                    </button>
                </div>

                <div class="row">
                    <% if (materials && materials.length> 0) { %>
                        <% materials.forEach(material=> { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <h6 class="mb-0">
                                            <%= material.title %>
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <% if (material.type==='video' ) { %>
                                            <div class="text-center mb-3">
                                                <i class="fas fa-video fa-3x text-danger"></i>
                                            </div>
                                            <% } else if (material.type==='document' ) { %>
                                                <div class="text-center mb-3">
                                                    <i class="fas fa-file-pdf fa-3x text-danger"></i>
                                                </div>
                                                <% } else if (material.type==='textbook' ) { %>
                                                    <div class="text-center mb-3">
                                                        <i class="fas fa-book fa-3x text-primary"></i>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="text-center mb-3">
                                                            <i class="fas fa-file fa-3x text-secondary"></i>
                                                        </div>
                                                        <% } %>

                                                            <p class="card-text">
                                                                <%= material.description || 'No description' %>
                                                            </p>
                                                            <p class="text-muted small">
                                                                <strong>Class:</strong>
                                                                <%= material.class ? material.class.name : 'General' %>
                                                                    <br>
                                                                    <strong>Type:</strong>
                                                                    <%= material.type %><br>
                                                                        <strong>Uploaded:</strong>
                                                                        <%= new
                                                                            Date(material.createdAt).toLocaleDateString()
                                                                            %>
                                                            </p>
                                    </div>
                                    <div class="card-footer">
                                        <div class="btn-group w-100">
                                            <!-- FIXED DOWNLOAD LINK -->
                                            <a href="/download/material/<%= material.id %>" class="btn btn-sm btn-outline-primary" target="_blank">
                                                <i class="fas fa-download"></i> Download
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteMaterial(<%= material.id %>)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-12">
                                        <div class="text-center py-5">
                                            <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                                            <h5>No materials uploaded yet</h5>
                                            <p class="text-muted">Upload your first teaching material to get started.
                                            </p>
                                        </div>
                                    </div>
                                    <% } %>
                </div>
        </div>

        <!-- Upload Material Modal -->
        <div class="modal fade" id="uploadMaterialModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Upload Teaching Material</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/teacher/materials/upload" method="POST" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Title *</label>
                                <input type="text" class="form-control" name="title" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" name="description" rows="3"></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Type *</label>
                                    <select class="form-select" name="type" required>
                                        <option value="">Select Type</option>
                                        <option value="textbook">Textbook</option>
                                        <option value="video">Video</option>
                                        <option value="document">Document</option>
                                        <option value="presentation">Presentation</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Category</label>
                                    <input type="text" class="form-control" name="category"
                                        placeholder="e.g., Mathematics, Science">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Class (Optional)</label>
                                <select class="form-select" name="classId">
                                    <option value="">General (Available to all)</option>
                                    <% classes.forEach(cls=> { %>
                                        <option value="<%= cls.id %>">
                                            <%= cls.name %> - <%= cls.grade %>-<%= cls.section %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">File *</label>
                                <input type="file" class="form-control" name="materialFile" required
                                    accept=".pdf,.doc,.docx,.ppt,.pptx,.txt,.mp4,.mov,.avi,.mkv,.jpg,.jpeg,.png">
                                <div class="form-text">
                                    Supported formats: PDF, DOC, PPT, TXT, MP4, MOV, AVI, MKV, JPG, PNG
                                </div>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" name="isPublic" id="isPublic" checked>
                                <label class="form-check-label" for="isPublic">
                                    Make this material public to all students
                                </label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Upload Material</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
<script>
    async function deleteMaterial(materialId) {
        if (confirm('Are you sure you want to delete this material?')) {
            try {
                const response = await fetch(`/teacher/materials/${materialId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    alert('Material deleted successfully');
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to delete material');
            }
        }
    }
</script>

</html>