<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduTech - My Classes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container mt-4">
            <%- include('../partials/alerts') %>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>My Classes</h2>
                    <span class="badge bg-primary">
                        <%= classes.length %> Class<%= classes.length !==1 ? 'es' : '' %>
                    </span>
                </div>

                <div class="row">
                    <% if (classes && classes.length> 0) { %>
                        <% classes.forEach(cls=> { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="mb-0">
                                            <%= cls.name %>
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="text-center mb-3">
                                            <i class="fas fa-users fa-3x text-primary"></i>
                                        </div>

                                        <p class="card-text">
                                            <strong>Grade:</strong>
                                            <%= cls.grade %>-<%= cls.section %><br>
                                                    <strong>Students:</strong>
                                                    <%= cls.enrollments.length %> enrolled<br>
                                                        <% if (cls.teacher && cls.teacher.subject) { %>
                                                            <strong>Subject:</strong>
                                                            <%= cls.teacher.subject %>
                                                                <% } else if (user && user.role==='teacher' ) { %>
                                                                    <strong>Subject:</strong>
                                                                    <%= user.teacherInfo?.subject || 'Not specified' %>
                                                                        <% } %>
                                        </p>

                                        <div class="mt-3">
                                            <h6>Recent Activity</h6>
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item small p-1">
                                                    <i class="fas fa-tasks text-info"></i>
                                                    <%= cls._count?.assignments || 0 %> assignments
                                                </li>
                                                <li class="list-group-item small p-1">
                                                    <i class="fas fa-book text-success"></i>
                                                    <%= cls._count?.materials || 0 %> materials
                                                </li>
                                                <li class="list-group-item small p-1">
                                                    <i class="fas fa-clipboard-list text-warning"></i>
                                                    <%= cls._count?.exams || 0 %> exams
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="btn-group w-100">
                                            <a href="/teacher/students" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-users"></i> Students
                                            </a>
                                            <a href="/teacher/assignments?class=<%= cls.id %>"
                                                class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-tasks"></i> Assignments
                                            </a>
                                            <a href="/teacher/materials?class=<%= cls.id %>"
                                                class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-book"></i> Materials
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-12">
                                        <div class="text-center py-5">
                                            <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                                            <h5>No classes assigned yet</h5>
                                            <p class="text-muted">You haven't been assigned to any classes yet.</p>
                                            <% if (user && user.role==='teacher' ) { %>
                                                <a href="/admin/dashboard" class="btn btn-outline-primary">
                                                    Contact Administrator
                                                </a>
                                                <% } else { %>
                                                    <a href="/teacher/dashboard" class="btn btn-outline-primary">
                                                        Return to Dashboard
                                                    </a>
                                                    <% } %>
                                        </div>
                                    </div>
                                    <% } %>
                </div>

                <!-- Class Statistics -->
                <% if (classes && classes.length> 0) { %>
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Class Statistics</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-md-3 mb-3">
                                            <div class="card bg-light">
                                                <div class="card-body">
                                                    <h2 class="text-primary">
                                                        <%= classes.reduce((total, cls)=> total +
                                                            cls.enrollments.length, 0) %>
                                                    </h2>
                                                    <p class="mb-0">Total Students</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card bg-light">
                                                <div class="card-body">
                                                    <h2 class="text-success">
                                                        <%= classes.reduce((total, cls)=> total +
                                                            (cls._count?.assignments || 0), 0) %>
                                                    </h2>
                                                    <p class="mb-0">Total Assignments</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card bg-light">
                                                <div class="card-body">
                                                    <h2 class="text-info">
                                                        <%= classes.reduce((total, cls)=> total + (cls._count?.materials
                                                            || 0), 0) %>
                                                    </h2>
                                                    <p class="mb-0">Teaching Materials</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card bg-light">
                                                <div class="card-body">
                                                    <h2 class="text-warning">
                                                        <%= classes.reduce((total, cls)=> total + (cls._count?.exams ||
                                                            0), 0) %>
                                                    </h2>
                                                    <p class="mb-0">Exams Created</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>