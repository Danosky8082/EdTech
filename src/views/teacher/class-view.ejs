<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> - EduTech
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .highlighted-row {
            background-color: #d1ecf1 !important;
            border-left: 4px solid #0dcaf0;
        }

        .class-info-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .stat-card {
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container mt-4">
            <%- include('../partials/alerts') %>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="fas fa-chalkboard me-2"></i>
                        <%= currentClass.name %>
                    </h2>
                    <div>
                        <a href="/teacher/students" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to Students
                        </a>
                    </div>
                </div>

                <!-- Class Info -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card class-info-card">
                            <div class="card-body">
                                <h6 class="card-title"><i class="fas fa-info-circle me-2"></i>Class Information</h6>
                                <p class="mb-1"><strong>Grade:</strong>
                                    <%= currentClass.grade || 'N/A' %>
                                </p>
                                <p class="mb-1"><strong>Section:</strong>
                                    <%= currentClass.section || 'N/A' %>
                                </p>
                                <p class="mb-0"><strong>Code:</strong> <code><%= currentClass.code %></code></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-primary stat-card">
                            <div class="card-body text-center">
                                <h2 class="display-4">
                                    <%= currentClass.enrollments.length %>
                                </h2>
                                <p class="mb-0">Enrolled Students</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-success stat-card">
                            <div class="card-body text-center">
                                <h2 class="display-4">
                                    <%= currentClass.assignments ? currentClass.assignments.length : 0 %>
                                </h2>
                                <p class="mb-0">Assignments</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Students List -->
                <div class="card">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Enrolled Students</h5>
                        <span class="badge bg-primary">
                            <%= currentClass.enrollments.length %> students
                        </span>
                    </div>
                    <div class="card-body p-0">
                        <% if (currentClass.enrollments && currentClass.enrollments.length> 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>ID Number</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% currentClass.enrollments.forEach(function(enrollment) { %>
                                            <% // Safely check if this is the highlighted student const
                                                isHighlighted=typeof highlightedStudent !=='undefined' &&
                                                highlightedStudent !==null &&
                                                highlightedStudent.id===enrollment.student.id; %>
                                                <tr class="<%= isHighlighted ? 'highlighted-row' : '' %>">
                                                    <td class="fw-bold">
                                                        <%= enrollment.student.user.idNumber %>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <% if (enrollment.student.user.avatar) { %>
                                                                <img src="/<%= enrollment.student.user.avatar %>"
                                                                    alt="Profile" class="rounded-circle me-2"
                                                                    style="width: 32px; height: 32px; object-fit: cover;"
                                                                    onerror="this.style.display='none'">
                                                                <% } %>
                                                                    <div>
                                                                        <%= enrollment.student.user.firstName %>
                                                                            <%= enrollment.student.user.lastName %>
                                                                                <% if (isHighlighted) { %>
                                                                                    <span
                                                                                        class="badge bg-info ms-2">Selected</span>
                                                                                    <% } %>
                                                                    </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <%= enrollment.student.user.email || 'N/A' %>
                                                    </td>
                                                    <td>
                                                        <span
                                                            class="badge bg-<%= enrollment.student.user.isActive ? 'success' : 'secondary' %>">
                                                            <%= enrollment.student.user.isActive ? 'Active' : 'Inactive'
                                                                %>
                                                        </span>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                                    <h4>No Students Enrolled</h4>
                                    <p class="text-muted">Students will appear here once they enroll in this class.</p>
                                    <a href="/teacher/students" class="btn btn-primary mt-2">
                                        <i class="fas fa-arrow-left me-1"></i> Back to Students
                                    </a>
                                </div>
                                <% } %>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card mt-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <a href="/teacher/assignments?class=<%= currentClass.id %>"
                                    class="btn btn-outline-primary w-100">
                                    <i class="fas fa-tasks me-1"></i> View Assignments
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/teacher/materials?class=<%= currentClass.id %>"
                                    class="btn btn-outline-success w-100">
                                    <i class="fas fa-book me-1"></i> View Materials
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/teacher/exams?class=<%= currentClass.id %>"
                                    class="btn btn-outline-info w-100">
                                    <i class="fas fa-file-alt me-1"></i> View Exams
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/teacher/students" class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-users me-1"></i> All Students
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Scroll to highlighted student if it exists
            document.addEventListener('DOMContentLoaded', function () {
                const highlightedRow = document.querySelector('.highlighted-row');
                if (highlightedRow) {
                    highlightedRow.scrollIntoView({ behavior: 'smooth', block: 'center' });

                    // Add a temporary animation
                    highlightedRow.style.transition = 'all 0.5s ease';
                    highlightedRow.style.boxShadow = '0 0 15px rgba(13, 202, 240, 0.5)';

                    setTimeout(() => {
                        highlightedRow.style.boxShadow = 'none';
                    }, 2000);
                }
            });
        </script>
</body>

</html>